{
  "name": "colder",
  "displayName": "Colder - LinkedIn Cold Outreach AI Assistant",
  "version": "0.0.1",
  "description": "AI-powered Chrome extension for personalized LinkedIn cold outreach messages",
  "author": "Your Name",
  "type": "module",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package",
    "test": "vitest run",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "playwright test",
    "test:watch": "vitest watch",
    "lint": "eslint src --ext .ts,.tsx"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/chrome": "^0.0.277",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.13",
    "@types/react-dom": "^18.3.1",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "jsdom": "^27.0.0",
    "plasmo": "^0.90.5",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "manifest": {
    "host_permissions": [
      "https://www.linkedin.com/*"
    ],
    "permissions": [
      "storage",
      "identity",
      "tabs",
      "activeTab",
      "alarms"
    ]
  }
}
