{
	"name": "colder-monorepo",
	"version": "0.0.1",
	"description": "Monorepo for Colder - LinkedIn Cold Outreach AI Assistant",
	"author": "Your Name",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "pnpm --parallel -r dev",
		"dev:extension": "pnpm --filter @colder/extension dev",
		"dev:backend": "pnpm --filter @colder/backend dev",
		"build": "pnpm -r build",
		"build:extension": "pnpm --filter @colder/extension build",
		"build:backend": "pnpm --filter @colder/backend build",
		"test": "pnpm -r test",
		"lint": "pnpm -r lint",
		"format": "pnpm -r format",
		"clean": "pnpm -r clean && rm -rf node_modules",
		"install:all": "pnpm install",
		"prisma:generate": "pnpm --filter @colder/backend prisma:generate",
		"prisma:migrate": "pnpm --filter @colder/backend prisma:migrate",
		"prisma:studio": "pnpm --filter @colder/backend prisma:studio",
		"prisma:push": "pnpm --filter @colder/backend prisma:push",
		"deploy": "vercel --prod",
		"deploy:preview": "vercel",
		"vercel:build": "pnpm prisma:generate && pnpm build:backend"
	},
	"devDependencies": {
		"typescript": "^5.7.2"
	}
}
