{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "~*": ["./src/*"]
    }
  },
  "include": [
    ".plasmo/index.d.ts",
    "src/**/*",
    "assets/**/*"
  ],
  "exclude": ["node_modules", "build", ".plasmo"]
}